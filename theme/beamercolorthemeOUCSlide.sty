% 定义元素基本颜色
\setbeamercolor{structure}{fg=buaablue, bg=}%主颜色。如果没有其他定义，则显示此颜色。
\setbeamercolor{palette primary}{use=structure, fg=buaablue, bg=}

\setbeamercolor{item}{fg=buaablue70}%item的颜色，是70%的北航蓝。
\setbeamercolor{item projected}{fg=buaablue70}

\setbeamercolor{enumerate item}{fg=black, bg=}
\setbeamercolor{enumerate subitem}{fg=black, bg=}
\setbeamercolor{enumerate subsubitem}{fg=black, bg=}

%默认的标题、副标题、作者、单位、日期，都是白色
\setbeamercolor{title}{fg=white,bg=}
\setbeamercolor{subtitle}{fg=white,bg=}
\setbeamercolor{author}{fg=white,bg=}
\setbeamercolor{date}{fg=white,bg=}

%默认block，颜色是北航蓝
\setbeamercolor{block title}{bg=buaablue,fg=white}
\setbeamercolor{block body}{bg=buaablue20}

%示例block，颜色是品质灰
\setbeamercolor{block title example}{bg=buaagray,fg=white}
\setbeamercolor{block body example}{bg=buaagray20}

